<Page x:Class="PapayagramsClient.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PapayagramsClient"
      xmlns:p="clr-namespace:PapayagramsClient.Properties"
      mc:Ignorable="d" 
      Title="MainMenu"
      d:DesignHeight="720" d:DesignWidth="1080"
      Background="#D9D9D9">

    <Grid>
        <Button Name="CreateGameButton" Content="{x:Static p:Resources.mainMenuCreateGame}" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Margin="125,185,0,0" VerticalAlignment="Top" Width="400" FontSize="36" Click="CreateNewGame"/>
        <Button Name="JoinGameButton" Content="{x:Static p:Resources.mainMenuJoinGame}" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Margin="125,285,0,0" VerticalAlignment="Top" Width="400" FontSize="36"/>
        <Button Name="ProfileButton" Content="{x:Static p:Resources.mainMenuProfile}" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Margin="125,385,0,0" VerticalAlignment="Top" Width="400" FontSize="36"/>
        <Button Name="LeaderboardButton" Content="{x:Static p:Resources.globalLeaderboard}" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Margin="125,485,0,0" VerticalAlignment="Top" Width="400" FontSize="36"/>
        <Label Content="Papayagrams" HorizontalAlignment="Left" Margin="95,54,0,0" VerticalAlignment="Top" FontSize="64" Width="467" HorizontalContentAlignment="Center"/>

    </Grid>
</Page>
