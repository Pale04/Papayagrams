<UserControl x:Class="PapayagramsClient.WPFControls.WPFGamePiece"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PapayagramsClient.WPFControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="35">
    <Grid>
        <Border BorderBrush="Black" BorderThickness=".5">
            <Rectangle x:Name="GamePiece" Fill="Green" Height="50" Width="35"/>
        </Border>
        <TextBlock Name="PieceLetter" Text="A" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20"/>
    </Grid>
</UserControl>
