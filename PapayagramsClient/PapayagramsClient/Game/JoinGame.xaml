<Page x:Class="PapayagramsClient.Game.JoinGame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:p="clr-namespace:PapayagramsClient.Properties"
      xmlns:svg="clr-namespace:SVGImage.SVG;assembly=SVGImage"
      xmlns:local="clr-namespace:PapayagramsClient.Game"
      mc:Ignorable="d" 
      Title="JoinGame"
      d:DesignHeight="720" d:DesignWidth="1080"
      Background="#D9D9D9">

    <Grid>
        <Button Style="{StaticResource PrimaryButton}" HorizontalAlignment="Left" Margin="46,53,0,0" VerticalAlignment="Top" Height="60" Width="61" Click="ReturnToMainMenu">
            <svg:SVGImage Name="BackImage"/>
        </Button>

        <TextBox Name="CodeTextbox" Style="{StaticResource CustomTextBox}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="200" Height="50" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="30" Padding="0"/>
        <Button Style="{StaticResource PrimaryButton}" Content="{x:Static p:Resources.joinGameJoin}" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,414,0,0" Width="250" Click="JoinGameRoom"/>
    </Grid>
</Page>
